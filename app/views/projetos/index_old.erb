<h1>Projetos jรก finalizados</h1>

<table class="data_list" cellpadding="0" cellspacing="0">
  <tr class="table_head">
    <td style="width: 60%;">Nome</td>
    <td style="width: 20%;">Data inicial</td>
    <td style="width: 20%;">Data final</td>
  </tr>
  <% @projetos.each do |projeto| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to projeto.nome, projeto %></td>
      <td><%= projeto.data_inicial.strftime "%d/%m/%Y" %></td>
      <td><%= projeto.data_final.strftime "%d/%m/%Y" %></td>
    </tr>
  <% end %>
    <% if @projetos.empty? %>
    <tr class="<%= cycle("even", "odd") %>">
      <td colspan="2" >
        <%= "Nenhum projeto foi finalizado ainda"%>
      </td>
    </tr>
    <% end %>
</table>

<div class="redirect_buttons">
  <%= link_to "Voltar", :back %>
</div>