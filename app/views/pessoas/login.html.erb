<h1>Login</h1>

<div class="form">
  <%= form_for @pessoa, :url => { :action => "do_login" } do |f| %>

    <div class="field">
      <%= f.label "Email:" %><br />
      <%= f.text_field :email, :id => 'email' %>
    </div>
    <div class="field">
      <%= f.label "Senha:" %><br />
      <%= f.password_field :senha, :id => 'senha' %>
    </div>
    <div class="actions">
      <%= f.submit :value => 'Login' %>
    </div>
  <% end %>
</div>