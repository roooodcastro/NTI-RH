<h1><%= "Editando cadastro de #{@pessoa.nome}" %></h1>

<div class="form">
  <%= form_for(@pessoa) do |f| %>
    <% if @pessoa.errors.any? %>
      <center>
        <div id="error_explanation">
          <h2><%= "#{pluralize(@pessoa.errors.count, "erro")} #{pluralize_word(@pessoa.errors.count, "impediu")} essa pessoa de ser alterada:" %></h2>
          <ul>
            <% @pessoa.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        </center>
      <% end %>

      <div class="field">
        <%= f.label :nome %><br/>
        <%= f.text_field :nome %>
      </div>
      <div class="field">
        <%= f.label :cpf %><br />
        <%= f.text_field :cpf %>
      </div>
      <div class="field">
        <%= f.label :celular %><br />
        <%= f.text_field :celular %>
      </div>
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :senha %><br/>
        <%= f.password_field :senha %>
      </div>
      <div class="field">
        <%= f.label :endereco %><br />
        <%= f.text_field :endereco %>
      </div>
      <div class="actions redirect_buttons">
        <%= f.submit %>
        <%= link_to "Cancelar", :back %>
      </div>
    <% end %>
</div>